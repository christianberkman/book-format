{
    "name": "christianberkman/sortable-book",
    "description": "Make the title and author sortable for use in a library inventory by moving the article and initials to the end of the string",
    "type": "library",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Berkman",
            "email": "christianberkman@gmail.com"
        }
    ],
    "require": {},
    "autoload": {
        "files": ["src/sortable-book.php"]
    },
    "scripts": {
        "cs-fix": "vendor/bin/php-cs-fixer fix .",
        "test": "vendor/bin/phpunit tests/",
        "phpstan": "vendor/bin/phpstan analyze -l 6 src/"
    }

}
